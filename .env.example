# WhatsApp MCP Environment Configuration
# Copy this file to .env and customize as needed

# WhatsApp Bridge Configuration
WHATSAPP_BRIDGE_PORT=8080
WHATSAPP_BRIDGE_HOST=0.0.0.0

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=0.0.0.0

# Database Configuration
MESSAGES_DB_PATH=/app/store/messages.db

# API Configuration
WHATSAPP_API_BASE_URL=http://whatsapp-bridge:8080/api

# History Configuration
# Number of days of message history to sync (default: 30)
HISTORY_DAYS_LIMIT=30

# Logging Configuration
LOG_LEVEL=info
DEBUG=false

# Optional: Customize session and store paths
SESSION_PATH=/app/session
STORE_PATH=/app/store

# Optional: Media storage path
MEDIA_PATH=/app/media
